{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "external": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "External type used in the model"
          },
          "namespace": {
            "type": "string",
            "description": "Full namespace of type. Only delim: '/' ",
            "pattern": "^[^(\\|.)]+$"
          }
        },
        "required": [
          "type"
        ],
        "patternProperties": {
          "^(.+)+$": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Replacement type in the selected language"
              },
              "namespace": {
                "type": "string",
                "description": "Full namespace of type. Only delim: '/' ",
                "pattern": "^[^(\\|.)]+$"
              }
            },
            "required": [
              "type"
            ]
          }
        },
        "additionalProperties": false
      }
    }
  }
}
